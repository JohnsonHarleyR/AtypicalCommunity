@using Atypical.Web.Models.User
@model ForgotPasswordViewModel


@{
    ViewBag.Title = "Forgot Password";
}

@Styles.Render("~/Content/login.css")

<h2>Forgot Password?</h2>



<div id="reset-password">


    <div class="form-horizontal">
        Enter your email below and we will send you a temporary code to reset your password.
        <br /><br />
    </div>

    @using (Html.BeginForm("SendCode", "User",
        FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">



            <div class="form-group">
                <div class="col-md-10">Email:</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email)
                    <br />
                    <span id="email-error">
                        @Html.ValidationMessageFor(model => model.Email)
                    </span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" id="send-code-button"
                           value="Send Code" class="btn btn-default" />
                </div>
            </div>

        </div>
    }


</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}